{
    "format_version": "1.21.100",
    "minecraft:block": {
        "description": {
            "identifier": "nv_ft:campfire",
            "menu_category": {
                "category": "items"
            },
            "states": {
                "nv_ft:placed": [ false, true ],
                "nv_ft:burn_stage": [ 0, 1, 2 ]
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [ "minecraft:cardinal_direction" ]
                }
            }
        },
        "components": {
            "nv_ft:block_with_entity": {},
            "minecraft:material_instances": {
                "*": {
                    "texture": "nv_ft:campfire_off",
                    "render_method": "alpha_test"
                }
            },
            "minecraft:selection_box": true,
            "minecraft:collision_box": true,
            "minecraft:geometry": "geometry.nv_ft.campfire_item",
            "minecraft:map_color": "#b8b298",
            "minecraft:destructible_by_mining": {
                "seconds_to_destroy": 3
            },
            "minecraft:light_dampening": 0,
            "tag:minecraft:is_axe_item_destructible":{},
            "tag:minecraft:is_pickaxe_item_destructible":{}
        },
        "permutations": [
            {
                "condition": "q.block_state('nv_ft:placed')",
                "components": { 
                    "minecraft:geometry": {
                        "identifier": "geometry.nv_ft.invisible_model",
                        "bone_visibility": {
                            "invisible": false
                        }
                    }
                }
            },
            {
                "condition": "q.block_state('nv_ft:burn_stage') == 2",
                "components": { 
                    "minecraft:light_emission": 15
                }
            },

            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'north'",
                "components": { "minecraft:transformation": { "rotation": [ 0, 180, 0 ] }}
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'east'",
                "components": { "minecraft:transformation": { "rotation": [ 0, 90, 0 ] }}
            },
            {
                "condition": "q.block_state('minecraft:cardinal_direction') == 'west'",
                "components": { "minecraft:transformation": { "rotation": [ 0, -90, 0 ] }}
            }
        ]
    }
}