{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.nv_ft.troll": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "transitions": [
                        { "walk": "q.ground_speed > 0.1" },
                        { "sniff": "q.timer_flag_1" }
                    ]
                },
                "walk": {
                    "animations": [ "walk" ],
                    "transitions": [
                        { "idle": "!q.ground_speed > 0.1" },
                        { "sniff": "q.timer_flag_1" }
                    ]
                },
                "sniff": {
                    "transitions": [
                        { "idle": "!q.timer_flag_1" }
                    ]
                }
            }
        }
    }
}
